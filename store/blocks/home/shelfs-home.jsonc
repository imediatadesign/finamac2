{
  // Shelf 1
  "flex-layout.row#home-shelf-1": {
    "props": {
      "paddingTop": 7,
      "paddingBottom": 4,
      "blockClass": [
        "shelf-home"
      ],
      "fullWidth": true
    },
    "children": [
      "rich-text#home-shelf-1",
      "list-context.product-list#home-shelf"
    ]
  },
  "rich-text#home-shelf-1": {
    "props": {
      "text": "### **Lan√ßamentos 2026**",
      "width": "100%",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "home-bandeja-title"
    }
  },
  "list-context.product-list#home-shelf": {
    "blocks": [
      "product-summary.shelf"
    ],
    "children": [
      "slider-layout#home-shelf"
    ],
    "props": {
      "orderBy": "OrderByTopSaleDESC",
      "width": "100%",
      "hideUnavailableItems": false,
      "category": "1"
    }
  },
  "slider-layout#home-shelf": {
    "props": {
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 3,
        "phone": 2
      },
      "infinite": true,
      "fullWidth": false,
      "showNavigationArrows": "desktopOnly",
      "showPaginationDots": "always",
      "blockClass": [
        "shelf",
        "dots-bottom"
      ]
    }
  },
  // Shelf 2
  "flex-layout.row#home-shelf-2": {
